<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ShadowPet.Desktop.ViewModels"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        mc:Ignorable="d" d:DesignWidth="380" d:DesignHeight="600"
        x:Class="ShadowPet.Desktop.Views.SettingsView"
        x:DataType="vm:SettingsViewModel"
        Icon="/Assets/icon.ico"
        Title="Configuracion"
        SystemDecorations="None" ShowInTaskbar="False" CanResize="False"
        SizeToContent="Height" Width="380"
        Background="Transparent"
        FontFamily="{StaticResource PressStart2P}"
        LostFocus="Window_LostFocus">

    <Window.Styles>
        <!-- Estilos Retro Inspirados en HomeView -->
        <Style Selector="Border.nes-container">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="Padding" Value="20" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="4" />
        </Style>

        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontSize" Value="10" />
        </Style>

        <Style Selector="TextBlock.Header">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
            <Setter Property="Foreground" Value="#209cee"/>
        </Style>

        <Style Selector="Button.nes-btn">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="10" />
            <Setter Property="Padding" Value="12,8" />
            <Setter Property="BorderThickness" Value="4" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Effect">
                <DropShadowEffect OffsetX="4" OffsetY="4" BlurRadius="0" Color="Black" />
            </Setter>
        </Style>

        <Style Selector="Button.nes-btn.is-primary">
            <Setter Property="Background" Value="#28a745" />
        </Style>
        <Style Selector="Button.nes-btn.is-primary:pointerover">
            <Setter Property="Background" Value="#218838" />
        </Style>

        <Style Selector="Button.nes-btn.is-error">
            <Setter Property="Background" Value="#e74c3c" />
        </Style>
        <Style Selector="Button.nes-btn.is-error:pointerover">
            <Setter Property="Background" Value="#c0392b" />
        </Style>

        <Style Selector="Button.nes-btn.is-warning">
            <Setter Property="Background" Value="#f0ad4e" />
        </Style>
        <Style Selector="Button.nes-btn.is-warning:pointerover">
            <Setter Property="Background" Value="#ec971f" />
        </Style>

        <Style Selector="Button.nes-btn:pressed">
            <Setter Property="Effect">
                <DropShadowEffect OffsetX="0" OffsetY="0" BlurRadius="0" Color="Black" />
            </Setter>
            <Setter Property="RenderTransform">
                <TranslateTransform X="4" Y="4" />
            </Setter>
        </Style>

        <Style Selector="CheckBox TextBlock">
            <Setter Property="FontSize" Value="9" />
        </Style>

        <Style Selector="Slider">
            <Setter Property="Height" Value="20" />
            <Setter Property="Margin" Value="0,5,0,10"/>
        </Style>
        <Style Selector="Slider /template/ RepeatButton#PART_TrackFill">
            <Setter Property="Background" Value="#209cee" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2 0 2 2"/>
        </Style>
        <Style Selector="Slider /template/ RepeatButton#PART_TrackBackground">
            <Setter Property="Background" Value="#dedede" />
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2 0 2 2"/>
        </Style>
        <Style Selector="Slider /template/ Thumb">
            <Setter Property="Width" Value="16"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="4"/>
            <Setter Property="CornerRadius" Value="0"/>
        </Style>
    </Window.Styles>

    <Border Classes="nes-container">
        <StackPanel Spacing="5">
            <TextBlock Text="Configuracion" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

            <!-- General -->
            <TextBlock Text="General" Classes="Header"/>
            <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                <TextBlock Text="Iniciar con Windows" VerticalAlignment="Center" FontSize="9"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding StartWithWindows}"/>
            </Grid>
            <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                <TextBlock Text="Permitir notificaciones" VerticalAlignment="Center" FontSize="9"/>
                <CheckBox Grid.Column="1" IsChecked="{Binding AllowNotifications}"/>
            </Grid>

            <!-- Comportamiento -->
            <TextBlock Text="Comportamiento" Classes="Header"/>
            <TextBlock Text="Nivel de Molestia" FontSize="9"/>
            <Slider Minimum="0" Maximum="100" Value="{Binding AnnoyanceLevel}"/>

            <TextBlock Text="Volumen de Sonido" FontSize="9"/>
            <Slider Minimum="0" Maximum="100" Value="{Binding SoundVolume}"/>

            <!-- Programas -->
            <TextBlock Text="Programas" Classes="Header"/>
            <TextBlock Text="Shadow puede iniciar estos programas al azar:" TextWrapping="Wrap" FontSize="8" LineHeight="14"/>
            <Border BorderBrush="Black" BorderThickness="4" Margin="0,10,0,0" MaxHeight="110" Background="#dedede">
                <ScrollViewer>
                     <ItemsControl ItemsSource="{Binding AllowedPrograms}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate x:DataType="sys:String">
                                <Grid ColumnDefinitions="*,Auto" Margin="8,4">
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis" FontSize="9"/>
                                    <Button Grid.Column="1"
                                            Content="X"
                                            Classes="nes-btn is-error"
                                            Command="{Binding RemoveProgramCommand, RelativeSource={RelativeSource AncestorType={x:Type vm:SettingsViewModel}}}"
                                            CommandParameter="{Binding}"
                                            Padding="8,4"
                                            FontSize="8"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            <Button Content="Añadir Programa" Classes="nes-btn" Command="{Binding AddProgramCommand}" HorizontalAlignment="Stretch" Margin="0,8,0,0"/>

            <!-- Footer -->
            <Separator Margin="0,20,0,10" Background="Black" Height="4"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
                 <Button Content="Reset" Classes="nes-btn is-warning" Command="{Binding ResetSettingsCommand}"/>
                 <Button Content="Guardar" IsDefault="True" Classes="nes-btn is-primary" Command="{Binding SaveSettingsCommand}" Click="CloseButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
