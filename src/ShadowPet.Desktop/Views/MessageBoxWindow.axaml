<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ShadowPet.Desktop.Views.MessageBoxWindow"
        Title="Confirmación"
        Width="600" SizeToContent="Height"
        CanResize="False"
        WindowStartupLocation="CenterOwner"
        SystemDecorations="None"
        ShowInTaskbar="False"
        Background="Transparent"
        Topmost="True">

    <Border Background="#2E2E2E" CornerRadius="8" BorderBrush="#555" BorderThickness="1"
            Padding="20">
        <StackPanel Spacing="15">
            <TextBlock x:Name="TitleTextBlock"
                       Text="Título"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White" />

            <TextBlock x:Name="MessageTextBlock"
                       Text="Pregunta"
                       TextWrapping="Wrap"
                       Foreground="#DDD" />

            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right"
                        Margin="0,10,0,0">
                <Button Content="¡Claro!"
                        Click="YesButton_Click"
                        IsDefault="True"
                        Classes="Primary" />

                <Button Content="No, gracias (Te odiara por siempre)"
                        Click="NoButton_Click"
                        IsCancel="True"
                        Classes="Danger" />
            </StackPanel>
        </StackPanel>
    </Border>
</Window>