<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ShadowPet.Desktop.ViewModels"
        xmlns:views="using:ShadowPet.Desktop.Views"
        x:Class="ShadowPet.Desktop.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        SystemDecorations="None"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        ShowInTaskbar="False"
        Topmost="True"
        Width="200"
        Height="200"
        FontFamily="{DynamicResource PressStart2P}"
        Icon="/Assets/icon.ico"
        Title="Shadow Pet">

    <Grid RowDefinitions="Auto, *">

        <views:DialogueBubble Grid.Row="0"
                              IsVisible="{Binding IsDialogueVisible}"
                              Text="{Binding DialogueText}" MaxWidth="180"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,5" />
        <Image Grid.Row="1"
               Name="PetSprite"
               Source="{Binding PetSprite}"
               VerticalAlignment="Center"
               HorizontalAlignment="Center" />

    </Grid>

</Window>